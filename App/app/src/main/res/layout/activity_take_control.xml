<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeControl">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/capture"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="180"
        android:scaleType="centerCrop"
         />


    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="match_parent"
       >

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystick1"
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="40dp"
            app:JV_backgroundColor="#99949397"
            app:JV_buttonColor="#95E8ECE4"
            app:JV_buttonSizeRatio="15%"
            app:JV_fixedCenter="true" />

        <RelativeLayout
            android:id="@+id/readings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/humi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Temp"
                android:layout_marginTop="0dp"
                android:hint="Humidity"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Temprature"
                android:inputType="number"
                android:minHeight="48dp"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/soil_moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humi"
                android:hint="Soil Moisture"
                android:inputType="number"
                android:minHeight="48dp"

                android:textColor="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="60dp">

            <ImageButton
                android:id="@+id/Rrt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:importantForAccessibility="no"
                app:srcCompat="@android:drawable/ic_popup_sync" />

            <ImageButton
                android:id="@+id/Lrt"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/Rrt"
                android:importantForAccessibility="no"
                android:rotationY="180"
                app:srcCompat="@android:drawable/ic_popup_sync" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       android:layout_marginStart="740dp"
        >


        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystick2"
            android:layout_width="322dp"
            android:layout_height="189dp"
            android:layout_marginTop="220dp"

            app:JV_backgroundColor="#99949397"
            app:JV_buttonColor="#95E8ECE4"
            app:JV_buttonSizeRatio="10%"

            />

        <Switch
            android:id="@+id/joystick_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:layout_marginTop="150dp"
            android:layout_marginStart="70dp"/>

        <TextView
            android:id="@+id/jstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#996F6F71"
            android:text="Camera"
            android:layout_marginStart="70dp"
            android:textColor="#504E4E"
            android:layout_below="@+id/joystick_toggle"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="30dp">
    <ImageButton
        android:id="@+id/capture_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:backgroundTint="#996F6F71"
        android:importantForAccessibility="no"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/Reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/capture_btn"
        android:layout_marginStart="20dp"
        android:backgroundTint="#996F6F71"
        android:importantForAccessibility="no"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />
</RelativeLayout>

        <ImageButton
            android:id="@+id/cameraSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@android:drawable/ic_menu_manage"
           />


    </RelativeLayout>

</FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>